<?xml version="1.0" encoding="utf-8" ?>
<ContentView xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ListSK.Models"
             x:Class="ListSK.Views.ListContentView"
             x:DataType="models:ProductModel">
    <Frame Padding="10" BorderColor="Blue" WidthRequest="200" Margin="10">
        <FlyoutBase.ContextFlyout>
            <MenuFlyout>
                <MenuFlyoutItem Text="UsuÅ„ produkt" Command="{Binding Source={x:Reference MainListRoot}, Path=BindingContext.RemoveProductCommand}"/>
            </MenuFlyout>
        </FlyoutBase.ContextFlyout>

        <Grid ColumnDefinitions="Auto,Auto,Auto" RowDefinitions="*,*,*">
            <Label Text="{Binding Name}" Grid.ColumnSpan="2" FontSize="Large"/>
            <CheckBox IsChecked="{Binding IsBought}" Grid.Column="2"/>
            
            <Entry Text="{Binding Amount}" Grid.Row="1" WidthRequest="50"/>
            <Label Text="{Binding Unit}" Grid.Row="1" Grid.Column="1" FontSize="Medium"/>
            <Label Text="{Binding Category}" Grid.Row="2"/>
        </Grid>
    </Frame>
</ContentView>
