<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:models="clr-namespace:ListSK.Models"
             x:Class="ListSK.Views.AddPage"
             x:DataType="models:AddPageModel"
             >
    <VerticalStackLayout>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            
            <Entry Placeholder="Produkt" 
                   Text="{Binding Name}" 
                   Margin="5"/>
            
            <Picker x:Name="category"
                    Title="Kategoria"
                    Grid.Column="1"
                    SelectedItem="{Binding Category}"
                    Margin="5">
                
                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>Nabiał</x:String>
                        <x:String>Pieczywo</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            <Entry Placeholder="Ilość"
                   Grid.Row="1"
                   Text="{Binding Amount}"
                   Margin="5"/>

            <Picker x:Name="unit"
                    Title="Wybierz jednostkę"
                    SelectedItem="{Binding Unit}"
                    Grid.Row="1"
                    Grid.Column="1"
                    Margin="5">

                <Picker.ItemsSource>
                    <x:Array Type="{x:Type x:String}">
                        <x:String>szt</x:String>
                        <x:String>l</x:String>
                        <x:String>kg</x:String>
                    </x:Array>
                </Picker.ItemsSource>
            </Picker>
            
            <CheckBox Grid.Row="2"
                      IsChecked="{Binding IsOptional}"/>
            
            <Label Text="Czy jest opcjonalne?"
                   Grid.Row="2"
                   Grid.Column="1"/>

            <Button Text="Dodaj produkt"
                    Grid.Row="3"
                    Grid.ColumnSpan="2"
                    Margin="5"
                    Command="{Binding AddProductCommand}"/>
            
            

            <Entry Placeholder="Nowa kategoria"
                   Grid.Row="4"
                   Margin="5"/>
            
            <Button Text="Dodaj kategorię"
                    Grid.Row="4"
                    Grid.Column="1"
                    Margin="5"/>
            
        </Grid>
    </VerticalStackLayout>
</ContentPage>