<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:views="clr-namespace:ListSK.Views"
             xmlns:models="clr-namespace:ListSK.Models"
             xmlns:viewModels="clr-namespace:ListSK.ViewModels"
             x:Class="ListSK.Views.MainListView"
             x:Name="MainListRoot"
             x:DataType="viewModels:MainListViewModel"
             >
    
    <CollectionView ItemsSource="{Binding Products}">
        <CollectionView.ItemTemplate>
            <DataTemplate>
                <views:ListContentView/>
            </DataTemplate>
        </CollectionView.ItemTemplate>
    </CollectionView>
</ContentPage>