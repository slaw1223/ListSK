<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="ListSK.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:ListSK.Views"
    Shell.FlyoutBehavior="Disabled"
    Title="ListSK">

    <TabBar>
        <ShellContent
            Title="Lista"
            ContentTemplate="{DataTemplate views:MainListView}"
            Route="MainListView" />

        <ShellContent
            Title="Dodaj"
            ContentTemplate="{DataTemplate views:AddPage}"
            />
    </TabBar>
</Shell>
